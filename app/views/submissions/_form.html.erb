<% if current_user %>
  <%= form_for(@submission) do |f| %>
    <% if @submission.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

        <ul>
          <% @submission.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :problem_id %><br>
      <%= f.collection_select :problem_id, Problem.all, :id, :title, {}, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :output %><br>
      <%= f.text_area :output, class: 'form-control', rows: 20 %>
    </div>
    <div class="actions">
      <%= f.submit '提出', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
